{
    "manifest_version": 3,
    "name": "Search Selected Text",
    "version": "1.0",
    "description": "Open a new tab with the selected text in the search bar",
    "permissions": ["tabs", "activeTab"],
    "host_permissions": ["<all_urls>"],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }
  